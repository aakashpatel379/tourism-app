<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_user"
        android:layout_width="100dp"
        android:layout_height="120dp"
        app:srcCompat="@drawable/register_ico"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        />

    <EditText
        android:id="@+id/et_name"
        android:layout_width="260dp"
        android:background="#11000000"
        android:layout_height="30dp"
        android:layout_marginTop="40dp"
        android:textColor="#ffffff"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/iv_user"
        android:ems="10"
        android:inputType="textPersonName"
         />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_user"
        android:layout_alignStart="@+id/et_name"
        android:layout_alignLeft="@+id/et_name"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="23dp"
        android:text="Name"
        android:textColor="@color/colorYellow"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/et_email"
        android:layout_width="260dp"
        android:background="#11000000"
        android:layout_height="30dp"
        android:textColor="#ffffff"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tv_reg_email"
        android:ems="10"
        android:inputType="textPersonName"
        />

    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/ll_gender_dob"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_name"
        android:layout_alignStart="@+id/et_name"
        android:layout_alignLeft="@+id/et_name"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="23dp"
        android:text="Email"
        android:textColor="@color/colorYellow"
        android:textSize="16sp" >

        <TextView
            android:id="@+id/tv_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gender"
            android:textColor="@color/colorYellow"
            android:textSize="16sp"
            />

        <Spinner
            android:id="@+id/spinner_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

        </Spinner>

        <TextView
            android:id="@+id/tv_dob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below ="@+id/tv_gender"
            android:text="DOB"
            android:layout_marginLeft="30dp"
            android:textColor="@color/colorYellow"
            android:textSize="16sp"
            />
        <TextView
            android:id="@+id/tv_dob_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below ="@+id/tv_gender"
            android:text="select.."
            android:layout_marginLeft="20dp"
            android:textColor="@color/colorWhite"
            android:textSize="10sp"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_reg_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_gender_dob"
        android:layout_alignStart="@+id/et_name"
        android:layout_alignLeft="@+id/et_name"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="23dp"
        android:text="Email"
        android:textColor="@color/colorYellow"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/et_password"
        android:layout_width="260dp"
        android:background="#11000000"
        android:layout_height="30dp"
        android:layout_marginTop="40dp"
        android:textColor="#ffffff"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/et_email"
        android:ems="10"
        android:inputType="textPassword"
        />

    <TextView
        android:id="@+id/tv_reg_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_email"
        android:layout_alignStart="@+id/et_name"
        android:layout_alignLeft="@+id/et_name"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="23dp"
        android:text="Password"
        android:textColor="@color/colorYellow"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/et_confirm"
        android:layout_width="260dp"
        android:background="#11000000"
        android:layout_height="30dp"
        android:layout_marginTop="40dp"
        android:textColor="#ffffff"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/et_password"
        android:ems="10"
        android:inputType="textPassword"
        />

    <TextView
        android:id="@+id/tv_conf_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/et_password"
        android:layout_alignStart="@+id/et_name"
        android:layout_alignLeft="@+id/et_name"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="23dp"
        android:text="Confirm"
        android:textColor="@color/colorYellow"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btn_register"
        android:layout_width="260dp"
        android:layout_height="50dp"
        android:layout_below="@+id/et_confirm"
        android:background="@drawable/login_button_shape"
        android:text="Register"
        android:textColor="#ffffff"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        />

</RelativeLayout>